// Ring Smooth
#declare ring_color = <%s>;
#declare ring_radius = %s;
#declare hole_radius = %s;
#declare ring_brightness = %s;
#declare ring_index = %s;
#declare planet_size = %s;

disc
{
   <0, 0, 0>,
   <0, 90, 0>,
   ring_radius, hole_radius
   no_reflection
   texture {
      pigment {
         waves
         turbulence 0.2
         frequency 1.5
         scale ring_brightness * 0.5
         color_map {
            [0 rgb <0,0,0> filter ring_brightness]
	    [1 rgb ring_color filter ring_brightness]
         }
      }
      finish {
         diffuse albedo -ring_brightness
         ambient ring_color
      }
    }
    rotate <0,(-clock*900000/pow(ring_radius, 2.4)),0>
}
